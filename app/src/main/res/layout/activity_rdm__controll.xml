<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kp.meganet.meganetkp.RDM_Controll"
    android:background="#ffffff"
    android:backgroundTint="#ffffff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/buttonConnect"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorButtonText"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewConnectedMTU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonConnect"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:text="Please click CONNECT and swipe a magnet on the Node"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewOpen"
        android:src="@drawable/open_rdm"
        android:background="@android:color/white"
        android:visibility="invisible"
        android:layout_alignTop="@+id/imageViewClose"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonOpen"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISCONNECT"
        android:id="@+id/buttonPowerOff"
        android:textColor="@color/colorButtonText"
        android:visibility="invisible"
        android:layout_above="@+id/textViewConnectedMTU"
        android:layout_alignEnd="@+id/textViewConnectedMTU" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewClose"
        android:src="@drawable/close_rdm"
        android:background="@android:color/white"
        android:visibility="invisible"
        android:layout_below="@+id/textViewDownCount"
        android:layout_alignEnd="@+id/buttonPowerOff"
        android:layout_above="@+id/buttonOpen"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        android:id="@+id/buttonOpen"
        android:textColor="@color/colorButtonText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/buttonClose"
        android:textColor="@color/colorButtonText"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:textSize="30sp"
        android:layout_alignEnd="@+id/textViewConnectedMTU" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewDownCount"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@+id/textViewConnectedMTU"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewConnectedMTU" />

    <CheckBox
        android:id="@+id/checkBoxKPE"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonOpen"
        android:layout_toEndOf="@+id/buttonOpen"
        android:buttonTint="@color/colorButtonText"
        android:text="Extended" /> <!--Replace KPE to Extended on 21.11.2019-->


</RelativeLayout>
